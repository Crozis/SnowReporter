- if (typeof errors !== 'undefined' && errors.length)
  %ul#errors
    - each error in errors
      %li.error= error

%form{ action: '/hills/' + action, method: 'POST' }
  %div
    %label{ for:  'name'} Nom
    %input{ type: 'text', name: 'hill[name]', value: hill.name}
  %div
    %label{ for:  'snow_top'} Hauteur de neige en haut
    %input{ type: 'text', name: 'hill[snow_top]', type: 'number', value: hill.snow_top }
  %div
    %label{ for:  'snow_bottom'} Hauteur de neige en bas
    %input{ type: 'text', name: 'hill[snow_bottom]', type: 'number', value: hill.snow_bottom }
  %div
    %label{ for:  'green_runs'} Nombre de piste verte
    %input{ type: 'text', name: 'hill[green_runs]', type: 'number', value: hill.green_runs }
  %div
    %label{ for:  'green_runs_open'} Nombre de piste verte ouverte
    %input{ type: 'text', name: 'hill[green_runs_open]', type: 'number', value: hill.green_runs_open }
  %div
    %label{ for:  'blue_runs'} Nombre de piste bleue
    %input{ type: 'text', name: 'hill[blue_runs]', type: 'number', value: hill.blue_runs }
  %div
    %label{ for:  'blue_runs_open'} Nombre de piste bleue ouverte
    %input{ type: 'text', name: 'hill[blue_runs_open]', type: 'number', value: hill.blue_runs_open }
  %div
    %label{ for:  'red_runs'} Nombre de piste rouge
    %input{ type: 'text', name: 'hill[red_runs]', type: 'number', value: hill.red_runs }
  %div
    %label{ for:  'red_runs_open'} Nombre de piste rouge ouverte
    %input{ type: 'text', name: 'hill[red_runs_open]', type: 'number', value: hill.red_runs_open }
  %div
    %label{ for:  'black_runs'} Nombre de piste noire
    %input{ type: 'text', name: 'hill[black_runs]', type: 'number', value: hill.black_runs }
  %div
    %label{ for:  'black_runs_open'} Nombre de piste noire ouverte
    %input{ type: 'text', name: 'hill[black_runs_open]', type: 'number', value: hill.black_runs_open }    
  #submit
    %input{ type: 'hidden', name: 'hill_id', value: hill.id}
    %input{ type: 'submit', value: action }
